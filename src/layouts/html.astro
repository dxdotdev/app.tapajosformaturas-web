---
interface Props {
  title: string
  class?: string
}

const { title, class: bodyClass } = Astro.props
---

<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <slot name="head" />
  </head>

  <body class={bodyClass}>
    <slot />
  </body>
</html>
